# .env.development - Updated for SAP backend integration (NO MOCK DATA)

# API Configuration - Update this to match your Spring Boot backend
VITE_API_BASE_URL=http://localhost:8080
VITE_API_TIMEOUT=90000
VITE_API_RETRY_ATTEMPTS=2

# SAP Configuration
VITE_SAP_DEFAULT_DATE_RANGE=30
VITE_SAP_MAX_RESULTS=1000
VITE_SAP_TIMEOUT=90000

# Development Features
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_ANALYTICS=false
VITE_SHOW_DEV_TOOLS=true

# SAP Features
VITE_ENABLE_SAP_CONNECTION=true
VITE_ENABLE_CREDENTIALS_STORAGE=true
VITE_ENABLE_AUTO_REFRESH=false
VITE_ENABLE_EXPORT_FEATURES=true

# UI Settings
VITE_ITEMS_PER_PAGE=20
VITE_CURRENCY=USD
VITE_DATE_FORMAT=YYYY-MM-DD
VITE_TIMEZONE=UTC

# Refresh Intervals (in milliseconds)
VITE_DASHBOARD_REFRESH_INTERVAL=300000
VITE_STATS_REFRESH_INTERVAL=120000

# Security Settings
VITE_ENCRYPT_CREDENTIALS=false
VITE_SESSION_TIMEOUT=3600000
VITE_ENABLE_CSP=false

# Logging
VITE_LOG_LEVEL=debug

# App Information
VITE_APP_NAME=Sales Order Management System
VITE_APP_VERSION=1.0.0